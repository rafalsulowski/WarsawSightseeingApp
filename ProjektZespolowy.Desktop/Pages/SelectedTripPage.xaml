        <Button x:Name="m_BtnDelete" Canvas.Left="1221" Canvas.Top="19" Height="35" Width="54" Background="#FFC61313" Foreground="White" Click="Button_Delete" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden">
